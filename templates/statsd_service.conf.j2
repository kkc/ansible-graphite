#!upstart
description "Statsd node.js server"

start on startup
stop on shutdown

respawn

script
    export HOME="/root"

    echo $$ > /var/run/statsd.pid
    exec sudo -u graphite /usr/bin/node /opt/statsd/stats.js /opt/statsd/config.js  >> /var/log/statsd.log 2> /var/log/statsd.error.log
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/statsd.log
end script

pre-stop script
    rm /var/run/statsd.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/statsd.log
end script
